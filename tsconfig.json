{
  "compilerOptions": {
    "newLine": "lf",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "types": ["mocha", "node"]
  },

  "exclude": ["node_modules", "dist", "test", "gulpfile.ts","**/**/*.js","**/**/*.d.ts"],

  "typedocOptions": {
    "entryPoints": ["index.ts"],
    "exclude": [
      "node_modules/**"
    ],
    "readme": "abstract.md",
    "entryPointStrategy": "expand",
    "disableSources": true,
    "hideGenerator": true,
    "excludePrivate": true,
    "hideBreadcrumbs": true,
    "hideInPageTOC": true,
    "out": "./docs"
  }
}
